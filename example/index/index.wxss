page {
  padding-bottom: 80rpx;
}
canvas {
  width: 100%;
  height: 1000px;
}
.mo-btn {
  border-radius: 0;
  width: 100%;
  height: 80rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #f06292, #ed5a65);
  color: #fff;
  font-size: 28rpx;
}
.op {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  background: #f06292;
  
}
.op .item {
    text-align: center;
    flex: 1;
}